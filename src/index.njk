<section class="latest-news-section">
    <h2>Latest News</h2>
    <div class="news-grid">
        {% for post in collections.posts | sortByDate %}
            {% if loop.index <= 6 %}
                {% set currentPost = post %}
                {% include "news-widget.njk" %}
            {% endif %}
        {% endfor %}
    </div>
</section>

